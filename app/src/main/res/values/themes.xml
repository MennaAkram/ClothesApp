<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClothesApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="TextStyle.LabelSmall">
        <item name="android:textSize">@dimen/text_tiny</item>
    </style>

    <style name="TextStyle.LabelMedium">
        <item name="android:textSize">@dimen/text_semi_small</item>
    </style>

    <style name="TextStyle.LabelLarge">
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <style name="TextStyle.BodySmall">
        <item name="android:textSize">@dimen/text_semi_small</item>
    </style>

    <style name="TextStyle.BodyMedium">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextStyle.BodyLarge">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>


    <style name="TextStyle.TitleSmall">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="fontFamily">@font/lato_medium</item>
    </style>

    <style name="TextStyle.TitleMedium">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="fontFamily">@font/lato_medium</item>
    </style>

    <style name="TextStyle.TitleLarge">
        <item name="android:textSize">@dimen/text_giant</item>
    </style>

